{% include 'template.html.twig' %}

<html>
<div class="container mt-4">
    {% if app.flashes('danger') %}
        <div class="alert alert-danger">
            {% for message in app.flashes('danger') %}
                <p><center>{{ dump(info) }}</center></p>
            {% endfor %}
        </div>
    {% endif %}
    <h1>Movies</h1>
    <ul class="list-group">
        <table>
            {% for movie in result %}
                <li class="list-group-item">
                    {{ movie.name }} - {{ movie.annee }} - {{ movie.duration }}
                        <form action="{{ path('movie_delete', {'id': movie.id}) }}" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this movie?');">Delete this movie</button>
                        </form>
                    <button class="btn btn-primary">Edit this movie</button>
                </li>
            {% endfor %}
        </table>
    </ul>
    <a href="{{ path('add_movie') }}">
        <center>
            <button type="button" class="btn btn-outline-primary">Add movie</button>

        </center>
    </a>
</div>
</body>
</html>
